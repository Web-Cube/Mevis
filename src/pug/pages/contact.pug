extends ../layouts/base

append vars
	- title = 'Контакты';
	
block content
	+b.head-page
		+e.wrap.wrap
			+e.H1.title.h2 Kontakt
			+e.subtitle.subtitle.color-orange schreiben Sie uns
	+b.contact
		+e.wrap.wrap
			+e.states
				+e.state.js-state
					+e.list.flex
						+e.item.flex._vertical
							+e.A.link(href="mailto:info@sg-mevis.de")
								+e.link-icon
									+icon('email')
								+e.link-text.p info@sg-mevis.de
						+e.item.flex._vertical._center
							+e.A.link(href="tel:+4915122262204")
								+e.link-icon
									+icon('mobile')
								+e.link-text.p + 49 151 222 62 204
						+e.item.flex._vertical._right
							+e.link
								+e.link-icon
									+icon('clock')
								+e.link-text.p Mo.- Fr. 13:00 - 16:00 Uhr
				+e.state.js-state
					+e.list.flex
						+e.item.flex._vertical
							+e.A.link(href="mailto:info@sg-mevis.de")
								+e.link-icon
									+icon('email')
								+e.link-text.p info@sg-mevis.de
						+e.item.flex._vertical._center
							+e.A.link(href="tel:+4935522234777")
								+e.link-icon
									+icon('mobile')
								+e.link-text.p + 49 355 222 34 777
						+e.item.flex._vertical._right
							+e.link
								+e.link-icon
									+icon('clock')
								+e.link-text.p  Mo.- Fr. 11:00 - 18:00 Uhr
		+e.maps
			+e.maps-top
				+e.maps-wrap.wrap
					+e.FORM.form.form__._small(action="/app/mail")
						+e.inside
							+e.title.h3 Kontaktformular
							+e.row.flex
								+e.column._col2
									+field(type="text", placeholder="Ihr Nachname", name="name", required)
								+e.column._col2
									+field(type="number", placeholder="Ihre Telefon", name="phone", pattern="[0-9]*", inputmode="numeric", required)
								+e.column._col2
									+field(type="email", placeholder="E-mail", name="email")
								+e.column._col2
									+select('Wählen Kursorte')(class="_border")
										+e.item.is-active.js-select-item(data-value="Fortgeschritten") Wählen Kursorte
										+e.item.js-select-item(data-value="Fortgeschritten") Fortgeschritten
										+e.item.js-select-item(data-value="Mini-Gruppen") Mini-Gruppen
										+e.item.js-select-item(data-value="Anfänger") Anfänger
										+e.item.js-select-item(data-value="Kraul Kurs") Kraul Kurs
								+e.column._big
									+e.field.field__
										+e.TEXTAREA.textarea.js-quiz-textarea(name="mess", placeholder="Ihre Anfrage / Ihre Mitteilung")
							+e.LABEL.checkbox.checkbox__
								+e.INPUT.input(type="checkbox", name="accept")
								+e.icon
									+icon('check')
								+e.text.p16
									| Ich bin mit der Verarbeitung 
									a(href="#") personenbezogener Daten 
									| einverstanden
							+e.bottom.flex._center
								+btn('submit')(class="_orange") Beantragen
			+e.maps-list
				+e.map.js-state.js-map#map1(data-len="52.53085093415103", data-lng="13.47202126967417")
				+e.map.js-state.js-map#map2(data-len="52.52856342115577", data-lng="13.358961585014256")
			script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAPWUUfpG7jvLHuxsCdhxUv8nklW5_W82s")